#!/bin/sh
# postinst script for lagerdox
#
# see: dh_installdeb(1)

set -e

# Source debconf library.
. /usr/share/debconf/confmodule

setup() {
  # First, fix permissions
  chown -R lagerdox.lagerdox /opt/lagerdox

  # Time to configure
  if [ -f /etc/lagerdox/lagerdox.conf ]; then
    # Seems to already exist, no point in editing it (yet)
    return
  fi
  db_input medium lagerdox/dbserver || true
  db_go
  db_input medium lagerdox/dbdatabase || true
  db_go
  db_input medium lagerdox/dbuser || true
  db_go
  db_input medium lagerdox/dbpassword || true
  db_go
  db_input high lagerdox/dbrootuser || true
  db_go
  db_input high lagerdox/dbrootpassword || true
  db_go
}

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        setup
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
